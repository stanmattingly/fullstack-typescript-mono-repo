{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["../../node_modules/@types"], // Point to root node_modules
    "types": ["node", "express", "jest"] // Include specific types
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
